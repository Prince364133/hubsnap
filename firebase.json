{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                ".next/cache"
            ]
        }
    ],
    "hosting": {
        "target": "hub-snap",
        "public": "dist",
        "rewrites": [
            {
                "source": "**",
                "function": "ssrhubsnap"
            }
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    }
}