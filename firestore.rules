rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile (except role and admin fields)
      allow update: if isAuthenticated() && 
        request.auth.uid == userId &&
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'activitySummary', 'metrics']);
      
      // Admins can read and write all user documents
      allow read, write: if isAdmin();
    }
    
    // Admin stats collection (admin-only)
    match /admin_stats/{document} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // User activity aggregates (admin-only)
    match /user_activity_aggregates/{userId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }

    // Analytics aggregates (admin-only)
    match /analytics_aggregates/{docId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Analytics events (write-only for authenticated users, read for admins)
    match /analytics_events/{eventId} {
      allow create: if isAuthenticated();
      allow read: if isAdmin();
      allow update, delete: if false;
    }
    
    // Analytics sessions (write-only for authenticated users, read for admins)
    match /analytics_sessions/{sessionId} {
      allow create, update: if isAuthenticated();
      allow read: if isAdmin();
      allow delete: if false;
    }
    
    // Short URLs collection
    match /short_urls/{urlId} {
      allow read: if true; // Public read for URL redirection
      allow write: if isAdmin();
    }
    
    // Export schedules - admin only
    match /exportSchedules/{scheduleId} {
      allow read, write: if isAdmin();
    }
    
    // Email logs - admin only
    match /emailLogs/{logId} {
      allow read: if isAdmin();
    }

    // Email queue - admin only (functions read/write, admin triggers)
    match /emailQueue/{emailId} {
      allow read, write: if isAdmin();
    }
    
    // Contact messages - public write
    match /contact_messages/{messageId} {
      allow create: if true; // Public contact form
      allow read: if isAdmin();
    }

    // Export history - admin only
    match /exportHistory/{exportId} {
      allow read: if isAdmin();
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
