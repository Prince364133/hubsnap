
# Valid Firebaseignore
.firebase
.firebaserc
firebase.json
firebase-debug.log
firebase-debug.log.*

# Ignore git files
.git
.gitignore

# Ignore dependencies
node_modules/
functions/node_modules/

# Ignore Next.js build artifacts (except what's needed for standalone if using it, but frameworks usually handle this)
.next/
out/
build/

# Ignore environment files
.env
.env.local
.env.*

# Ignore other potentially large or unnecessary files
coverage/
src/
public/
README.md
*.md
